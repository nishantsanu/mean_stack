<!-- write only variable part as it is exported to layout -->
<link rel="stylesheet" href="/css/home.css">
<h1>This is <%= title %> </h1>

<section id="feed-post">
    <h4>Posts</h4>
   <% if(locals.user){ %>
    <form action="/posts/create" id="new-post-form" method="POST">
        <textarea name="content" cols="30" rows="3" placeholder="Type what you want to post..."></textarea>
        <input type="submit" value="Post">
    </form>
    <%  } %>
</section>
<section>
    <div id="posts-list-container"></div>
        <ul>
            <%  for( post of posts){ %>
                    <%- include('_post.ejs')-%>
            <%  } %>
        </ul>
    </div>
</section>

<section id="user-friends">
    <h4>Friends</h4>
    <% for(u of all_users){%>
        <p>
            <a href="/users/profile/<%= u.id %>"><%= u.name %></a>
        </p>


    <%}%>
</section>





